<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="Title"
        android:textSize="15sp"
        android:textColor="#000000"
        android:gravity="center"
        android:background="@color/top_bottom"
        android:id="@+id/title"/>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingVertical="10dp"
        android:background="@color/top_bottom"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-11dp"
                android:layout_height="40dp"
                android:src="@drawable/selector_message" />
            <TextView
                android:id="@+id/t_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/navigation_text_normal"
                android:layout_marginTop="19dp"
                android:textSize="8sp"
                android:text="消息"/>
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/contact"
                android:layout_width="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_height="43dp"
                android:layout_marginTop="-11dp"
                android:src="@drawable/selector_contact" />
            <TextView
                android:id="@+id/t_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/navigation_text_normal"
                android:layout_marginTop="19dp"
                android:textSize="8sp"
                android:text="通讯录"/>
        </FrameLayout>

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/mine"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_marginTop="-11dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/selector_mine" />
            <TextView
                android:id="@+id/t_mine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/navigation_text_normal"
                android:layout_marginTop="19dp"
                android:textSize="8sp"
                android:text="我"/>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>