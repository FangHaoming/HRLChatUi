<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AnswerVoiceCallActivity">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/anwser_call_background">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/call_target"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="hello"
                    android:textSize="30sp"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/voice_call_request"/>


        <ImageView
            android:id="@+id/call_ok"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/anwser_call_ok"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_toLeftOf="@id/centerView"
            android:layout_marginRight="45dp"/>


        <View
            android:id="@+id/centerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/call_cancel"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:src="@drawable/anwser_call_cancel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:layout_toRightOf="@id/centerView"
            android:layout_marginLeft="45dp"/>





    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>